<cfquery name="HIGH_PROFIT_UNIT_PRODUCTS" DATASOURCE="#DSN#" MAXROWS="10">
	SELECT 
		SETUP_MONEY.RATE2,
		PUF.*
	FROM
		#dsn3_alias#.PRODUCT_UNIT_PROFIT PUF,SETUP_MONEY
	WHERE
		SETUP_MONEY.PERIOD_ID = #SESSION.EP.PERIOD_ID# AND
		SETUP_MONEY.MONEY_STATUS = 1 AND
		SETUP_MONEY.MONEY = PUF.MONEY
	ORDER BY
		PUF.PROFIT DESC
</cfquery>
