<cfquery name="get_top_offer" datasource="#dsn#" maxrows="10">
	SELECT 
		O.RECORD_DATE,
		O.OFFER_HEAD,
		O.OFFER_ZONE,
		O.OFFER_ID,
		CP.COMPANY_PARTNER_NAME,
		CP.COMPANY_PARTNER_SURNAME,
		C.NICKNAME,
		CP.PARTNER_ID,
		CP.COMPANY_ID
	FROM
		#dsn3_alias#.OFFER O ,
		COMPANY_PARTNER CP, 
		COMPANY C
	WHERE 
		O.PURCHASE_SALES = 0 
	AND
		O.OFFER_ZONE = 1 
	AND
		O.RECORD_MEMBER = CP.PARTNER_ID
	AND
		CP.COMPANY_ID = C.COMPANY_ID
	ORDER BY
		O.RECORD_DATE DESC
</cfquery>
