<cfquery name="get_quiz_section" datasource="#dsn#">
	SELECT
		TRAINING_CAT.TRAINING_CAT,
		TRAINING_SEC.SECTION_NAME,
		TRAINING_SEC.TRAINING_SEC_ID
	FROM
		TRAINING_SEC,
		TRAINING_CAT
	WHERE
		TRAINING_SEC.TRAINING_SEC_ID = #attributes.TRAINING_SEC_ID#
		AND
		TRAINING_SEC.TRAINING_CAT_ID = TRAINING_CAT.TRAINING_CAT_ID
</cfquery>

