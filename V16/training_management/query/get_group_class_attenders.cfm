	AND TRAINING_CLASS_ATTENDER.CON_ID IN (#LISTSORT(attributes.consumer_ids,"NUMERIC")#)
	AND CONSUMER.CONSUMER_ID = TRAINING_CLASS_ATTENDER.CON_ID
