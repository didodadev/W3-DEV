	CONSUMER.CONSUMER_ID AS IDS,
	CONSUMER.TITLE AS POSITION,
	CONSUMER.DEPARTMENT AS DEPARTMAN,
	CONSUMER.COMPANY AS NICK_NAME,
	' ' AS BRANCH_NAME,
	TCGC.IS_COMPLETED,
	TCGC.REASON_TO_LEAVE_ID,
	CONSUMER.TC_IDENTY_NO AS TC_NO
FROM
	TRAINING_CLASS_ATTENDER
	LEFT JOIN TRAINING_CLASS_GROUP_COMPLETION TCGC ON TRAINING_CLASS_ATTENDER.CON_ID=TCGC.CON_ID AND TCGC.TRAIN_GROUP_ID = <cfqueryparam cfsqltype="cf_sql_integer" value="#attributes.train_group_id#">,
