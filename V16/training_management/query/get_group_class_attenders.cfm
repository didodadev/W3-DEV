<cfquery name="get_class_attender_emps" datasource="#dsn#">
	SELECT DISTINCT
	'employee' AS TYPE,
	TRAINING_CLASS_ATTENDER.EMP_ID AS K_ID,
	EMPLOYEE_POSITIONS.EMPLOYEE_NAME AS AD,
	EMPLOYEE_POSITIONS.EMPLOYEE_SURNAME AS SOYAD,
	EMPLOYEE_POSITIONS.EMPLOYEE_ID AS IDS,
	EMPLOYEE_POSITIONS.POSITION_NAME AS POSITION,
	DEPARTMENT.DEPARTMENT_HEAD AS DEPARTMAN,
	C.NICK_NAME AS NICK_NAME,
	BRANCH.BRANCH_NAME AS BRANCH_NAME,
	TCGC.IS_COMPLETED,
	TCGC.REASON_TO_LEAVE_ID,
	EI.TC_IDENTY_NO AS TC_NO,
	TRAINING_CLASS_ATTENDER.CLASS_ID,
	TRAINING_CLASS_ATTENDER.CLASS_ATTENDER_ID,
	TC.CLASS_NAME
FROM
	TRAINING_CLASS_ATTENDER
	LEFT JOIN TRAINING_CLASS_GROUP_COMPLETION TCGC ON TCGC.EMP_ID = TRAINING_CLASS_ATTENDER.EMP_ID AND TCGC.TRAIN_GROUP_ID = <cfqueryparam cfsqltype="cf_sql_integer" value="#attributes.train_group_id#">
	INNER JOIN TRAINING_CLASS TC ON TC.CLASS_ID = TRAINING_CLASS_ATTENDER.CLASS_ID,
	EMPLOYEE_POSITIONS
	LEFT JOIN EMPLOYEES_IDENTY EI ON EI.EMPLOYEE_ID = EMPLOYEE_POSITIONS.EMPLOYEE_ID,
	DEPARTMENT,
	BRANCH,
	OUR_COMPANY C
WHERE
	DEPARTMENT.BRANCH_ID=BRANCH.BRANCH_ID
	AND C.COMP_ID=BRANCH.COMPANY_ID
	<cfif  isdefined("attributes.ex_class_id") and len(attributes.ex_class_id)>
		AND TRAINING_CLASS_ATTENDER.EX_CLASS_ID = #attributes.ex_class_id#
	</cfif>
	AND TRAINING_CLASS_ATTENDER.EMP_ID IN (#listsort(attributes.employee_ids,"numeric")#)
	AND EMPLOYEE_POSITIONS.EMPLOYEE_ID = TRAINING_CLASS_ATTENDER.EMP_ID
	AND EMPLOYEE_POSITIONS.DEPARTMENT_ID = DEPARTMENT.DEPARTMENT_ID
	AND EMPLOYEE_POSITIONS.IS_MASTER = 1
	AND TRAINING_CLASS_ATTENDER.EMP_ID IS NOT NULL
	AND TRAINING_CLASS_ATTENDER.CLASS_ID IN (#class_list#)
ORDER BY TC.CLASS_NAME, AD, SOYAD
</cfquery>
 <cfquery name="get_class_attender_pars" datasource="#DSN#">
SELECT DISTINCT
	'partner' AS TYPE,
	TRAINING_CLASS_ATTENDER.PAR_ID K_ID,
	COMPANY_PARTNER.COMPANY_PARTNER_NAME AS AD,
	COMPANY_PARTNER.COMPANY_PARTNER_SURNAME AS SOYAD,
	COMPANY_PARTNER.PARTNER_ID AS IDS,
	COMPANY_PARTNER.TITLE AS POSITION,
	COMPANY_PARTNER.DEPARTMENT AS DEPARTMAN, 	
	COMPANY.NICKNAME AS NICK_NAME,
	' ' AS BRANCH_NAME,
	TCGC.IS_COMPLETED,
	TCGC.REASON_TO_LEAVE_ID,
	COMPANY_PARTNER.TC_IDENTITY AS TC_NO
FROM
	TRAINING_CLASS_ATTENDER
	LEFT JOIN TRAINING_CLASS_GROUP_COMPLETION TCGC ON TRAINING_CLASS_ATTENDER.PAR_ID = TCGC.PAR_ID AND TCGC.TRAIN_GROUP_ID = <cfqueryparam cfsqltype="cf_sql_integer" value="#attributes.train_group_id#">,
	COMPANY_PARTNER,
	COMPANY
WHERE
	TRAINING_CLASS_ATTENDER.CLASS_ID IN (#class_list#)
	AND TRAINING_CLASS_ATTENDER.PAR_ID IN (#LISTSORT(attributes.PARTNER_IDS,"NUMERIC")#)
	AND COMPANY_PARTNER.PARTNER_ID = TRAINING_CLASS_ATTENDER.PAR_ID
	AND COMPANY_PARTNER.COMPANY_ID = COMPANY.COMPANY_ID
ORDER BY AD,SOYAD
</cfquery>
<cfquery name="get_class_attender_cons" datasource="#dsn#">
