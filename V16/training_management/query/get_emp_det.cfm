<cfquery NAME="GET_EMP_IDENTY" DATASOURCE="#DSN#">
	SELECT
		MARRIED
	FROM
		EMPLOYEES_IDENTY
	WHERE
		EMPLOYEE_ID=#attributes.EMP_ID#
</cfquery>
<cfquery NAME="GET_EMP_APP" DATASOURCE="#DSN#">
	SELECT
		CHILD
	FROM
		EMPLOYEES_APP
	WHERE
		EMPAPP_ID=#attributes.EMP_ID#
</cfquery>
<cfquery name="GET_LANGUAGES" datasource="#dsn#">
	SELECT
		SETUP_LANGUAGE.*
	FROM
		SETUP_LANGUAGE,
		MY_SETTINGS
	WHERE
	    LANGUAGE_SHORT = MY_SETTINGS.LANGUAGE_ID
		AND 
		MY_SETTINGS.EMPLOYEE_ID = #attributes.EMP_ID#
</cfquery>
