<cfquery name="DETAIL_EMP" datasource="#DSN#">
	SELECT 
		EMPLOYEES.EMPLOYEE_NAME,
		EMPLOYEES.COMPANY_ID,
		EMPLOYEES.EMPLOYEE_SURNAME,
		EMPLOYEES.EMPLOYEE_EMAIL,
		EMPLOYEES.EMPLOYEE_USERNAME,
		EMPLOYEES.TASK,
		EMPLOYEES.MEMBER_CODE,
<!---		EMPLOYEES.IM,--->
		EMPLOYEES.MOBILTEL,
		EMPLOYEES.DIRECT_TELCODE,
		EMPLOYEES.DIRECT_TEL,
		EMPLOYEES.EXTENSION,
<!---		EMPLOYEES.IMCAT_ID,--->
		EMPLOYEES.MOBILCODE,
		EMPLOYEE_POSITIONS.TITLE_ID,
		EMPLOYEES.PHOTO,
		EMPLOYEE_POSITIONS.DEPARTMENT_ID,
		EMPLOYEE_POSITIONS.POSITION_CODE
	FROM
		EMPLOYEES,
		EMPLOYEE_POSITIONS
	WHERE
		EMPLOYEES.EMPLOYEE_ID = #attributes.EMP_ID#
	AND
		EMPLOYEE_POSITIONS.EMPLOYEE_ID = EMPLOYEES.EMPLOYEE_ID
</cfquery>
<cfquery NAME="GET_EMP_DETAIL" DATASOURCE="#DSN#">
