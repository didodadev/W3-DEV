<cfquery name="CAMPAIGNS" datasource="#DSN3#">
	SELECT
		CAMPAIGNS.CAMP_ID,
		CAMPAIGNS.CAMP_NO,
		CAMPAIGN_CATS.CAMP_CAT_NAME,
		CAMPAIGNS.CAMP_STATUS,
		CAMPAIGNS.CAMP_HEAD,
		CAMPAIGNS.CAMP_STARTDATE,
		CAMPAIGNS.CAMP_FINISHDATE
	FROM
		CAMPAIGNS,
		CAMPAIGN_CATS
	WHERE
		CAMPAIGNS.CAMP_CAT_ID = CAMPAIGN_CATS.CAMP_CAT_ID AND
		CAMPAIGNS.CAMP_STATUS = 1
	ORDER BY 
		CAMPAIGNS.RECORD_DATE DESC
</cfquery>
