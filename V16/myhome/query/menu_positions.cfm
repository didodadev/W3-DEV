<cfsetting showdebugoutput="no"><cfparam name="URL.panelName" default=""><cfparam name="URL.targetPanelName" default=""><!--- Hedefe index olarak kullanılıyor---><cfparam name="URL.islem" default=""><cfparam name="URL.isRemove" default=0><cfparam name="URL.col" default=0><cfif URL.islem is "change">	<cfif URL.panelName is "" or URL.targetPanelName is "">				<cfabort>	</cfif>		<cfquery name="menu_position_root" datasource="#dsn#">		SELECT			MENU_POSITION_ID,COLUMN_INDEX,SEQUENCE_INDEX		FROM			MY_SETTINGS_POSITIONS		WHERE			PANEL_NAME = '#url.panelName#' AND			EMP_ID = #session.ep.userid#	</cfquery>		<cfquery name="upd_menu_position" datasource="#dsn#">			<!--- KAYNAK bölgedeki diğer kayıtların sırasını güncelle--->		UPDATE			MY_SETTINGS_POSITIONS		SET						SEQUENCE_INDEX = (SEQUENCE_INDEX - 1)		WHERE			MENU_POSITION_ID <> #menu_position_root.menu_position_id# AND			COLUMN_INDEX = #menu_position_root.column_index# AND			SEQUENCE_INDEX > #menu_position_root.sequence_index# AND			EMP_ID = #session.ep.userid#						<!--- HEDEF bölgedeki diğer kayıtların sırasını güncelle--->		UPDATE			MY_SETTINGS_POSITIONS		SET						SEQUENCE_INDEX = (SEQUENCE_INDEX + 1)		WHERE			COLUMN_INDEX = #URL.col# AND			SEQUENCE_INDEX >= #URL.targetPanelName# AND			EMP_ID = #session.ep.userid#				<!--- Paneli Taşı --->		UPDATE			MY_SETTINGS_POSITIONS		SET			COLUMN_INDEX = #URL.col#,			SEQUENCE_INDEX = #URL.targetPanelName#		WHERE			MENU_POSITION_ID = #menu_position_root.menu_position_id#	</cfquery>	</cfif><cfif URL.islem is "del">		<cfquery name="menu_position_root" datasource="#dsn#">		SELECT			MENU_POSITION_ID,COLUMN_INDEX,SEQUENCE_INDEX		FROM			MY_SETTINGS_POSITIONS		WHERE			PANEL_NAME = '#url.panelName#' AND			EMP_ID = #session.ep.userid#	</cfquery>			<cfquery name="upd_menu_position" datasource="#dsn#">	<!--- KAYNAK bölgedeki diğer kayıtların sırasını güncelle--->	UPDATE		MY_SETTINGS_POSITIONS	SET					SEQUENCE_INDEX = (SEQUENCE_INDEX - 1)	WHERE		MENU_POSITION_ID <> #menu_position_root.menu_position_id# AND		COLUMN_INDEX = #menu_position_root.column_index# AND		SEQUENCE_INDEX > #menu_position_root.sequence_index# AND		EMP_ID = #session.ep.userid#	</cfquery>				<cfquery name="upd_menu_position" datasource="#dsn#">	DELETE FROM		MY_SETTINGS_POSITIONS	WHERE		PANEL_NAME = '#url.panelName#' AND		EMP_ID = #session.ep.userid#	</cfquery></cfif><cfif URL.islem is "del2">			<cfquery name="upd_menu_position" datasource="#dsn#">	<cfparam name="URL.column" default="">	<cfif URL.column is ""><cfabort></cfif>	UPDATE		MY_SETTINGS	SET		#UCase(URL.column)# = 0	WHERE		EMPLOYEE_ID = #session.ep.userid#	</cfquery></cfif>	<cfif URL.islem is "close">	<cfparam name="URL.isClose" default="0">			<cfif URL.panelName is ""><cfabort></cfif>		<cfquery name="menu_position_root" datasource="#dsn#">		UPDATE			MY_SETTINGS_POSITIONS		SET			IS_CLOSE = #URL.isClose#		WHERE			PANEL_NAME = '#url.panelName#' AND			EMP_ID = #session.ep.userid#	</cfquery>	</cfif>