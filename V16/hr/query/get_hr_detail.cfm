<cfquery name="GET_HR_DETAIL" datasource="#dsn#">
	SELECT 
		ED.*,
		E.EMPLOYEE_NAME,
		E.EMPLOYEE_SURNAME,
		EI.EMPAPP_ID,
		EI.BIRTH_DATE,
		EI.BIRTH_PLACE,
		EI.TC_IDENTY_NO,
		EI.SOCIALSECURITY_NO 
	FROM
		EMPLOYEES_DETAIL ED,
		EMPLOYEES E,
		EMPLOYEES_IDENTY EI
	WHERE 
		ED.EMPLOYEE_ID=#attributes.EMPLOYEE_ID#
		AND E.EMPLOYEE_ID = ED.EMPLOYEE_ID
		AND EI.EMPLOYEE_ID = ED.EMPLOYEE_ID
</cfquery>
