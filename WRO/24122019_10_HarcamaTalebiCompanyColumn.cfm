    BEGIN
        ALTER TABLE EXPENSE_ITEM_PLAN_REQUESTS ADD
        INVOICE_DATE datetime NULL
    END;
    IF NOT EXISTS (SELECT 'Y' FROM INFORMATION_SCHEMA.COLUMNS WHERE TABLE_NAME = 'EXPENSE_ITEM_PLAN_REQUESTS' AND TABLE_SCHEMA = '@_dsn_period_@' AND COLUMN_NAME = 'PAYMENT_INTERRUPTION_VALUE')
    BEGIN
